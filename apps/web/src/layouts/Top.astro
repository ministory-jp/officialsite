---
import HumbergerMenu from '../components/HumbergerMenu.astro';
import { SOCIAL_LINK } from '../consts';
---

<div class="flex w-full">
    <section class="relative md:flex-auto">
        <div class="absolute top-3 left-3 md:top-10 md:left-10">
            <a href="/">
                <img class="h-auto w-24 md:w-40" src="/images/logo.png" alt="logo" />
            </a>
        </div>
        <!-- <div class="absolute bottom-3 right-3 w-auto md:bottom-10 md:right-10">
             {
             ['心動かされる瞬間を届ける', '仕える喜びを'].map((text) => (
             <div class="mb-4 flex justify-end">
             <p class="inline-block break-words bg-white p-2 text-right text-3xl font-bold">{text}</p>
             </div>
             ))
             }
             </div> -->
        <div class="block md:hidden">
            <HumbergerMenu />
        </div>
        <img class="h-[60vh] object-cover md:h-auto md:max-h-[90vh] md:w-screen" src="/images/cover.jpg" alt="top-1" />
    </section>
    <section class="hidden h-auto w-40 md:flex md:flex-col">
        <a
            href="#contact"
            class="flex aspect-square w-full flex-col items-center justify-center bg-primary text-center text-white"
        >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
                <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"></path>
                <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                ></path>
            </svg>
            お問い合わせ
        </a>
        <a
            href="#support"
            class="flex aspect-square w-full flex-col items-center justify-center bg-primary-light text-center text-white"
        >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
                <path
                    d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"
                ></path>
            </svg>
            支援する
        </a>
        <a
            href={SOCIAL_LINK.instagram}
            target="_blank"
            class="flex aspect-square w-full flex-col items-center justify-center bg-white text-center"
        >
            <img class="m-auto size-8" src="/icons/instagram.svg" alt="instagram-icon" />
        </a>
    </section>
</div>

---
interface Props {
    question: string;
    answer: string;
}

const { question, answer } = Astro.props;
---

<div class="max-w-full overflow-hidden rounded-2xl shadow-xl">
    <div class="flex items-center space-x-4 bg-primary-light px-4 py-8">
        <h3 class="flex-none text-4xl font-extrabold">Q</h3>
        <h3 class="flex-auto text-xl font-bold">{question}</h3>
    </div>
    <div class="flex items-center space-x-4 bg-white px-4 py-8">
        <h3 class="flex-none text-4xl font-extrabold">A</h3>
        <p class="flex-auto text-base leading-relaxed font-normal tracking-wider break-words">{answer}</p>
    </div>
</div>

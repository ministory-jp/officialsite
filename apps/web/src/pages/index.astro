---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Activity from "../layouts/Activity.astro";
import Contact from "../layouts/Contact.astro";
import Faq from "../layouts/Faq.astro";
import Support from "../layouts/Support.astro";
import Top from "../layouts/Top.astro";
import WhatWeDoing from "../layouts/WhatWeDoing.astro";
import WhoWeAre from "../layouts/WhoWeAre.astro";
---

<!doctype html>
<html lang="ja">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
